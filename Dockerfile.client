# Use Node.js LTS as the base image for the React Vite app
FROM node:14 AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

RUN npm run build

# Use a smaller image for the final runtime
FROM node:14-alpine

WORKDIR /app

COPY --from=builder /app/dist ./dist

CMD ["npm", "start"]